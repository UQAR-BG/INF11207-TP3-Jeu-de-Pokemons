<Window x:Class="INF11207_TP3_Jeu_de_Pokemons.Views.Pokemons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:control="clr-namespace:INF11207_TP3_Jeu_de_Pokemons.Views.UserControls"
        mc:Ignorable="d"
        
        Title="Pokemons" 
        Height="800" 
        Width="800"
        MinHeight="800" 
        MinWidth="800" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <control:Menu 
            Grid.ColumnSpan="3"/>

        <Label 
            Content="Pokémons équipés"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.ColumnSpan="3"
            Grid.Column="0"
            Grid.Row="1"
            FontSize="30"/>

        <control:PokemonDetails
            Grid.Column="0"
            Grid.Row="2"/>

        <control:ActionsPokemonAchete
            Grid.Column="0"
            Grid.Row="10"/>

        <control:PokemonDetails
            Grid.Column="1"
            Grid.Row="2"/>

        <control:ActionsPokemonAchete
            Grid.Column="1"
            Grid.Row="10"/>

        <control:PokemonDetails
            Grid.Column="3"
            Grid.Row="2"/>

        <control:ActionsPokemonAchete
            Grid.Column="2"
            Grid.Row="10"/>
    </Grid>
</Window>
